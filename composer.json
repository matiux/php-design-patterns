{
  "name": "matiux/php-design-patterns",
  "description": "PHP design pattern based on the book \"Head First Design Patterns\" and more.",
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "DesignPatterns\\": "src/"
    }
  },
  "require": {
    "php": "^7.4",
    "ext-intl": "*",
    "doctrine/dbal": "^2.7",
    "ramsey/uuid": "^3.7",
    "symfony/console": "^5.0",
    "phpunit/phpunit": "^9.5",
    "mockery/mockery": "^1.5"
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.9",
    "psalm/plugin-mockery": "^0.9.1",
    "psalm/plugin-phpunit": "^0.17.0",
    "vimeo/psalm": "^4.24"
  }
}
